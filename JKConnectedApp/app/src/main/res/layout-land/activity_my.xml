<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinnerView"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:visibility="gone" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="175dp"
            android:layout_height="fill_parent"
            android:visibility="visible" />

        <com.loopj.android.image.SmartImageView
            android:id="@+id/profilePic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="200dp"
            android:layout_marginStart="25dp" />

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="305dp"
            android:layout_marginStart="305dp" />

        <TextView
            android:id="@+id/classText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="305dp"
            android:layout_marginStart="305dp" />

        <TextView
            android:id="@+id/raceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="305dp"
            android:layout_marginStart="305dp"/>

        <TextView
            android:id="@+id/lvlText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="305dp"
            android:layout_marginStart="305dp" />

        <TextView
            android:id="@+id/specNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="135dp"
            android:layout_marginLeft="400dp"
            android:layout_marginStart="400dp" />

        <TextView
            android:id="@+id/specRoleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="165dp"
            android:layout_marginLeft="400dp"
            android:layout_marginStart="400dp" />

        <TextView
            android:id="@+id/specDescText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="195dp"
            android:layout_marginLeft="400dp"
            android:layout_marginStart="400dp"  />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="175dp"
        android:layout_marginStart="175dp">

        <TextView
            android:id="@+id/serverView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:text="@string/Server"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/guildView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/serverView"
            android:layout_toRightOf="@+id/serverView"
            android:layout_marginLeft="75dp"
            android:layout_marginStart="75dp"
            android:text="@string/GuildName"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/serverEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/serverView"
            android:hint="@string/ServerHint"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <EditText
            android:id="@+id/guildEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guildView"
            android:layout_toEndOf="@+id/serverEdit"
            android:layout_toRightOf="@+id/serverEdit"
            android:hint="@string/GuildNameHint"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" />

        <Button
            android:id="@+id/enterBTN"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/guildEdit"
            android:layout_toRightOf="@+id/guildEdit"
            android:text="@string/ButtonName"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"/>

    </RelativeLayout>

</RelativeLayout>
